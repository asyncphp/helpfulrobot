<?php

use Aerys\Request;
use Aerys\Response;
use Aerys\Router;
use HelpfulRobot\Responder\Page;
use HelpfulRobot\Responder\User;

return function (Router $router) {
    $router->get(
        "/",
        Page\HomeResponder->new()->closure()
    );

    $router->post(
        "/user/register",
        User\RegisterResponder->new()->closure()
    );

    $router->post(
        "/user/login",
        User\LoginResponder->new()->closure()
    );
};
