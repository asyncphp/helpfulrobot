{
    "scripts": {
        "serve": "vendor/bin/aerys -d -c loader.php",
        "serve:watch": "scripts/serve-watch",
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test:watch": "scripts/test-watch"
    },
    "require": {
        "amphp/aerys": "^0.4.7",
        "amphp/file": "^0.1.3",
        "pre/async": "^0.7.2"
    },
    "autoload": {
        "psr-4": {
            "HelpfulRobot\\": "app"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "yosymfony/resource-watcher": "^1.2"
    },
    "autoload-dev": {
        "psr-4": {
            "HelpfulRobot\\Tests\\": "tests"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
