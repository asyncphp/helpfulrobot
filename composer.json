{
    "scripts": {
        "serve": "aerys -d -c loader.php",
        "serve:watch": "scripts/serve-watch",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:watch": "scripts/test-watch",
        "db:cleanup": "phoenix cleanup -c bootstrap/migrations.php",
        "db:migrate": "phoenix migrate -c bootstrap/migrations.php",
        "db:fresh": ["@db:cleanup", "@db:migrate"]
    },
    "require": {
        "amphp/aerys": "^0.4.7",
        "amphp/file": "^0.1.3",
        "amphp/mysql": "^0.1.5",
        "pre/async": "^0.7.2",
        "pre/collections": "^0.3.0",
        "pre/short-closures": "^0.5.2",
        "vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "HelpfulRobot\\": "app"
        }
    },
    "require-dev": {
        "lulco/phoenix": "^0.9",
        "phpunit/phpunit": "^6.2",
        "yosymfony/resource-watcher": "^1.2"
    },
    "autoload-dev": {
        "psr-4": {
            "HelpfulRobot\\Tests\\": "tests"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
